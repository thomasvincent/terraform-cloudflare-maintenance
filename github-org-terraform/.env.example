# GitHub Organization Terraform Environment Variables
# Copy to .env and fill in your values

# Required: GitHub Authentication (choose one method)
# Option 1: Personal Access Token
export GITHUB_TOKEN="ghp_your_github_token_here"

# Option 2: GitHub App (more secure)
# export GITHUB_APP_ID="123456"
# export GITHUB_APP_INSTALLATION_ID="12345678"
# export GITHUB_APP_PEM_FILE="~/.github/app.pem"

# Organization Settings
export TF_VAR_github_organization="thomasvincent"

# AWS Settings (if using S3 backend)
# export AWS_PROFILE="your-profile"
# export AWS_REGION="us-west-2"

# Terraform Settings
export TF_VAR_environment="production"

# Security Settings
export TF_VAR_require_signed_commits="false"

# Secrets (use environment variables instead of hardcoding)
# export TF_VAR_github_secrets='{"NPM_TOKEN":"your-npm-token","DOCKER_PASSWORD":"your-docker-password"}'